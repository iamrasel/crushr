<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:layout_gravity="center_vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/color_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="serif"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioGroup
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/color_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_1_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_2_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_3_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_4_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_5_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_6_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/first_row"
            android:gravity="center">
            <RadioButton
                android:id="@+id/color_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_7_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_8_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_9_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_10_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_11_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_12_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/second_row">
            <RadioButton
                android:id="@+id/color_13"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_13_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_14"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_14_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_15"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_15_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_16"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_16_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_17"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_17_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
            <RadioButton
                android:id="@+id/color_18"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_18_selector"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml" />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/third_row"
            android:gravity="center">
            <RadioButton
                android:id="@+id/color_19"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_19_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_20"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_20_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_21"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_21_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_22"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_22_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_23"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_23_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
            <RadioButton
                android:id="@+id/color_24"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color_24_selector"
                android:layout_margin="4dp"
                android:button="@android:color/transparent"
                android:onClick="onRadioButtonChecked"
                tools:ignore="UsingOnClickInXml"/>
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">

        <EditText
            android:id="@+id/color_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bg_edittext"
            android:textColor="@android:color/black"
            android:padding="7dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="text"
            android:hint="@string/color_hint"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <View
            android:id="@+id/color_preview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="end">
        <Button
            android:id="@+id/input_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:layout_gravity="center"
            android:background="@drawable/btn_pressed"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="3dp"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/input_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:layout_gravity="center"
            android:background="@drawable/btn_pressed"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="3dp"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

</LinearLayout>
